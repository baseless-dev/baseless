{
	"workspace": [
		"./client",
		"./core",
		"./examples/hello-world",
		"./providers/deno",
		"./providers/inmemory",
		"./react",
		"./server"
	],
	"tasks": {
		"npm-link": "deno run -A ./scripts/npm-link.ts",
		"test": "deno test -A --unstable-kv",
		"testfast": "deno test -A --unstable-kv --parallel --fail-fast"
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"jsxImportSourceTypes": "@types/react"
	},
	"exclude": ["_npm"],
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"include": ["explicit-function-return-type"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 140
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1.0.11",
		"@std/cli": "jsr:@std/cli@1.0.11",
		"@std/encoding": "jsr:@std/encoding@1.0.6",
		"@std/fs": "jsr:@std/fs@1.0.10",
		"@std/path": "jsr:@std/path@1.0.8",
		"@testing-library/react": "npm:@testing-library/react@16.2.0",
		"@types/react": "npm:@types/react@19.0.8",
		"jose": "npm:jose@5.9.6",
		"openapi-types": "npm:openapi-types@12.1.3",
		"react": "npm:react@19.0.0",
		"react-dom": "npm:react-dom@19.0.0",
		"zod": "npm:zod@4.1.3"
	}
}
