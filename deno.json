{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "https://esm.sh/react@18.2.0",
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"deno.ns",
			"deno.unstable",
			"deno.window",
			"deno.url",
			"deno.web"
		]
	},
	"tasks": {
		"start:hello-world": "DENO_DIR=.deno deno run --watch --unstable --allow-read --allow-write --allow-env --allow-net --allow-sys ./examples/hello-world/server.ts",
		"bundle:hello-world": "DENO_DIR=.deno deno run -A ./cli/bundle.ts --entry ./examples/hello-world/server.ts --dist ./examples/hello-world/dist --show-deps 4",
		"build": "DENO_DIR=.deno deno run -A ./build.ts",
		"fmt": "DENO_DIR=.deno deno fmt",
		"lint": "DENO_DIR=.deno deno lint",
		"cache": "DENO_DIR=.deno deno cache",
		"check": "DENO_DIR=.deno deno check client/**/*.ts",
		"info": "DENO_DIR=.deno deno info",
		"bench": "DENO_DIR=.deno deno bench -A --unstable",
		"test": "DENO_DIR=.deno deno test -A --unstable --fail-fast --coverage=coverage",
		"test:fast": "DENO_DIR=.deno deno test -A --unstable --parallel --fail-fast",
		"coverage": "DENO_DIR=.deno deno coverage coverage"
	},
	"exclude": ["examples/", ".deno/", "npm/", "coverage/"],
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"include": ["explicit-function-return-type"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80
	}
}
