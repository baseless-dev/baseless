{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "https://esm.sh/react@18.2.0",
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"deno.ns",
			"deno.unstable",
			"deno.window",
			"deno.url",
			"deno.web"
		],
		"importsNotUsedAsValues": "error",
		"ignoreDeprecations": "5.0"
	},
	"tasks": {
		"start:hello-world": "deno run --watch --unstable-kv --allow-read --allow-write --allow-env --allow-net --allow-sys ./examples/hello-world/server.ts",
		"bundle:hello-world": "deno run -A ./cli/bundle.ts --entry ./examples/hello-world/server.ts --dist ./examples/hello-world/dist --show-deps 4",
		"build": "deno run -A ./build.ts",
		"fmt": "deno fmt",
		"lint": "deno lint",
		"cache": "deno cache",
		"check": "deno check client/**/*.ts",
		"info": "deno info",
		"bench": "deno bench -A --unstable-kv",
		"test": "deno test -A --unstable-kv --fail-fast --coverage=coverage",
		"test:fast": "deno test -A --unstable-kv --parallel --fail-fast",
		"coverage": "deno coverage coverage"
	},
	"exclude": ["npm/", "coverage/"],
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"include": ["explicit-function-return-type"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80
	}
}
