{
	"importMap": "./import-map.json",
	"compilerOptions": {
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment"
	},
	"tasks": {
		"start:hello-world": "deno run --watch --unstable --allow-env --allow-net examples/hello-world/server.ts",
		"bundle:hello-world": "deno bundle --unstable --no-check examples/hello-world/server.ts examples/hello-world/bundle.js"
	},
	"lint": {
		"files": {
			"exclude": ["dist/"]
		}
	},
	"fmt": {
		"files": {
			"exclude": ["dist/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 180
		}
	},
	"test": {
		"files": {
			"exclude": ["dist/"]
		}
	}
}
