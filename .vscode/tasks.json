{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "deno",
			"command": "run",
			"args": [
				"--unstable",
				"-A",
				"build.ts",
				"--watch"
			],
			"isBackground": true,
			"label": "Build (watch)"
		},
		{
			"type": "deno",
			"command": "fmt",
			"args": [
				"--config",
				"./deno.json",
				"--watch"
			],
			"isBackground": true,
			"group": "test",
			"label": "Run formatter (watch)",
			"problemMatcher": []
		},
		{
			"type": "deno",
			"command": "lint",
			"args": [
				"--config",
				"./deno.json",
				"--watch"
			],
			"isBackground": true,
			"group": "test",
			"label": "Run linter (watch)",
			"problemMatcher": []
		},
		{
			"type": "deno",
			"command": "test",
			"args": [
				"--config",
				"./deno.json",
				"--import-map",
				"./import-map.json",
				"--allow-all",
				"--watch"
			],
			"isBackground": true,
			"label": "Run test (watch)"
		},
		{
			"type": "shell",
			"command": "deno test --config=./deno.json --import-map=./import-map.json --allow-all --coverage=./coverage; deno coverage coverage --exclude=json-schema",
			"label": "Generate coverage",
			"problemMatcher": []
		},
		{
			"type": "deno",
			"command": "run",
			"args": [
				"--unstable",
				"-A",
				"build.ts"
			],
			"label": "Build"
		}
	]
}
